<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="20dp">

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="30dp">

    <ImageView
        android:id="@+id/displayQueueShopImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp">

        <TextView
            android:id="@+id/displayQueueShopName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="shopName"
            android:textColor="@color/colorBlack"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Queue "
                android:textColor="@color/colorBlack"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/displayQueueNumber"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:text="queueNumber"
                android:textColor="@color/colorBlack"
                android:textSize="25sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/queueTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="timer"
            android:textColor="@color/colorBlack"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/displayQueueState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:background="@drawable/border_text_view"
            android:textColor="#000"
            android:text="queueState"
            android:textSize="25sp"/>


    </LinearLayout>
</LinearLayout>


</androidx.cardview.widget.CardView>