<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

<!--        <ImageView-->
<!--            android:id="@+id/displayQueueShopImage"-->
<!--            android:layout_width="100dp"-->
<!--            android:layout_height="100dp"-->
<!--            android:layout_marginStart="25dp"-->
<!--            android:layout_marginTop="15dp"-->
<!--            android:layout_marginBottom="15dp"-->
<!--            android:scaleType="centerCrop" />-->

        <TextView
            android:id="@+id/displayQueueShopName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="38dp"
            android:layout_toEndOf="@+id/displayShopImage"
            android:paddingStart="10dp"
            android:paddingTop="30dp"
            android:paddingEnd="10dp"
            android:text="shopName"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/displayQueueNumber"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="38dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="1dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="30dp"
            android:paddingEnd="10dp"
            android:text="queueNumber"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/displayQueueState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginBottom="30dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:padding="20dp"
            android:background="@drawable/text_view_border"
            android:textColor="#000"
            android:text="queueState"
            android:textSize="25sp"/>


    </LinearLayout>


</androidx.cardview.widget.CardView>